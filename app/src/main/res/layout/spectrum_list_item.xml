<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/spectrum_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/spectrum_item_text_margin_left"
        android:gravity="center"
        android:textSize="@dimen/activity_font_size"/>

    <CheckBox
        android:id="@+id/spectrum_item_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spectrum_item_checkbox_margin_right"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone"/>

</LinearLayout>