<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingStart="@dimen/spectrum_item_v_padding"
    android:paddingEnd="@dimen/spectrum_item_v_padding"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/spectrum_item_icon"
        android:layout_width="@dimen/spectrum_item_icon_size"
        android:layout_height="@dimen/spectrum_item_icon_size"
        android:layout_marginTop="@dimen/spectrum_item_h_padding"
        android:layout_marginBottom="@dimen/spectrum_item_h_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_normal_36dp"/>

    <TextView
        android:id="@+id/spectrum_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/spectrum_item_h_padding"
        android:layout_marginBottom="@dimen/spectrum_item_h_padding"
        android:paddingStart="@dimen/spectrum_item_text_padding_left"
        android:textSize="@dimen/activity_font_size"/>

    <CheckBox
        android:id="@+id/spectrum_item_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone"/>

</LinearLayout>