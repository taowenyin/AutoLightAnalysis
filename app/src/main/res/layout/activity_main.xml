<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="@dimen/activity_padding"
    android:paddingStart="@dimen/activity_padding"
    android:paddingBottom="@dimen/activity_padding"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ToggleButton
            android:id="@+id/connect_device_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/button_height"
            android:minHeight="@dimen/button_mini_size"
            android:minWidth="@dimen/button_mini_size"
            android:checked="false"
            android:textOn="@string/connect_serial_toggle_on_label"
            android:textOff="@string/connect_serial_toggle_off_label"
            android:textSize="@dimen/activity_font_size"/>

        <Button
            android:id="@+id/save_light_spectrum_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/button_height"
            android:minHeight="@dimen/button_mini_size"
            android:minWidth="@dimen/button_mini_size"
            android:enabled="false"
            android:text="@string/save_light_spectrum_label"
            android:textSize="@dimen/activity_font_size"/>

        <Button
            android:id="@+id/save_dark_spectrum_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/button_height"
            android:minHeight="@dimen/button_mini_size"
            android:minWidth="@dimen/button_mini_size"
            android:enabled="false"
            android:text="@string/save_dark_spectrum_label"
            android:textSize="@dimen/activity_font_size"/>

        <Button
            android:id="@+id/read_spectrum_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/button_height"
            android:minHeight="@dimen/button_mini_size"
            android:minWidth="@dimen/button_mini_size"
            android:enabled="false"
            android:text="@string/read_spectrum_label"
            android:textSize="@dimen/activity_font_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_read_spectrum_label"
            android:textSize="@dimen/activity_font_size"/>

        <Switch
            android:id="@+id/toggle_auto_read_spectrum_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false" />

        <EditText
            android:id="@+id/toggle_auto_read_spectrum_interval_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/auto_read_spectrum_hint_label"
            android:autofillHints="@string/auto_read_spectrum_hint_label"
            android:gravity="center"
            android:textSize="@dimen/activity_font_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_read_spectrum_unit_label"
            android:textSize="@dimen/activity_font_size" />

        <ImageButton
            android:id="@+id/exit_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:paddingTop="@dimen/button_padding"
            android:paddingBottom="@dimen/button_padding"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_power_off_36dp"/>

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/analysis_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/tab_elevation"
        app:tabMode="scrollable"
        app:tabIndicatorHeight="@dimen/tab_indicator_height"
        app:tabIndicatorColor="@android:color/holo_blue_dark" />

    <android.support.v4.view.ViewPager
        android:id="@+id/analysis_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>